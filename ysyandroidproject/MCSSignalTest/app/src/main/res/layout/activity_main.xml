<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="mainActivity"
            type="com.example.mcssignaltest.MainActivity" />
    </data>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 百度地图容器 -->

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="-189dp" />

            <TextView
                android:id="@+id/position_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <!-- 添加你的工具栏或标题栏等内容 -->

            </com.google.android.material.appbar.AppBarLayout>




            <!-- 卡片容器 -->
            <com.google.android.material.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="292dp"
                android:layout_height="223dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#61649f">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 上拉按钮 -->
                    <ImageView
                        android:id="@+id/split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:src="@android:drawable/button_onoff_indicator_off" />

                    <!-- 经纬度图标 -->
                    <View
                        android:id="@+id/location"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_explore_dirct"
                        android:backgroundTint="#00B169" />


                    <!-- 经度文本框 -->
                    <TextView
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="18dp"
                            android:padding="5dp"
                            android:text="经度:"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />


                    <!-- 显示经度 -->
                    <TextView
                        android:id="@+id/longtitude"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="18dp"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />



                    <!-- 纬度文本框 -->
                    <TextView
                            android:layout_width="60dp"
                            android:layout_height="34dp"
                            android:layout_marginLeft="159dp"
                            android:layout_marginTop="18dp"
                            android:padding="5dp"
                            android:text="纬度:"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />


                    <!-- 显示纬度 -->
                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="18dp"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />


                    <!-- 信号强度图标 -->
                    <View
                        android:id="@+id/signal"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="65dp"
                        android:background="@drawable/ic_network_cell"
                        android:backgroundTint="#22A2c3" />


                    <!-- 信号强度文本框 -->
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="65dp"
                        android:padding="5dp"
                        android:text="信号强度:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />


                    <!-- 显示信号强度 -->
                    <TextView
                        android:id="@+id/CellSignal"
                        android:layout_width="90dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="65dp"
                        android:padding="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <!-- 分割线 -->
                    <View
                            android:id="@+id/line"
                            android:layout_marginLeft="21dp"
                            android:layout_width="250dp"
                            android:layout_height="1dp"
                            android:background="#33343B"
                            android:layout_marginTop="105dp"
                             />

                    <!-- 上传控制按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/playPauseButton"
                        android:layout_width="62dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="118dp"
                        android:backgroundTint="#BF7ED321"
                        app:cardElevation="20dp"
                        app:cornerRadius="36dp"
                        app:icon="@drawable/ic__pause"
                        app:iconGravity="textStart"
                        app:iconPadding="0.5dp"
                        app:iconSize="30dp"
                        app:shapeAppearanceOverlay="@style/RoundedButtonShape" />

                    <!-- 标记按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/SoBadlocate"
                        android:layout_width="62dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="182dp"
                        android:layout_marginTop="118dp"
                        android:backgroundTint="#BFF9A800"
                        app:cardElevation="20dp"
                        app:cornerRadius="36dp"
                        app:icon="@drawable/ic_signal_cellular_connected_no_internet"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="40dp"
                        app:shapeAppearanceOverlay="@style/RoundedButtonShape" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 标题框容器 -->
            <com.google.android.material.appbar.MaterialToolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FF158bb8"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:ignore="MissingConstraints" >
            </com.google.android.material.appbar.MaterialToolbar>


            <!-- 悬浮按钮容器 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:backgroundTintMode="add"
                android:src="@drawable/ic_location_searching"
                app:backgroundTint="#57c3c2"
                app:cardElevation="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.60"
                app:rippleColor="#FFFFFF" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </FrameLayout>

    <!-- 滑动菜单 -->
    <TextView
        android:id="@+id/EquipMessList"
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:layout_gravity="start"
        android:textColor="#000000"
        android:background="#BFFFFFFF"
        android:textSize="15sp" />


</androidx.drawerlayout.widget.DrawerLayout>
</layout>